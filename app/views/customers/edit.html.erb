<div class="container">
  <div class="m-md-2">
    <div class="row">
      <%= form_for @customer do |f| %>
        <div class="form-group mt-2">
          <label>Nome</label>
          <%= f.text_field :name, placeholder: "Digite o nome do cliente", maxlength: 40, class: "form-control #{flash[:class]}" %>
          <% if flash[:error].present? %>
            <div class="alert alert-danger">
              <%= flash[:error] %>
            </div>
          <% end %>
        </div>
        <div class="form-group mt-2">
          <label>Dia de pagamento</label>
          <%= f.select :day, @days, {} ,class: 'form-control' %>
        </div>
        <div class="form-group mt-2">
          <label class="form-check-label" for="exampleCheck1">Forma de pagamento</label>
          <%= f.select :invoice_type_id, options_for_select(
          @invoice_types.map { |invoice_type| [invoice_type.name, invoice_type.id] },
          selected: @customer.invoice_type_id), {}, class: 'form-control' %>
        </div>
        <div class="mt-2" align="right">
          <%= link_to "Cancelar", customers_path, class: "btn btn-secondary" %>
          <%= f.submit "Salvar", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>