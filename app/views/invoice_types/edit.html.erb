<div class="container">
  <div class="m-md-2">
    <div class="row">
      <%= form_for @invoice_type do |f| %>
        <div class="form-group mt-2">
          <label>Nome</label>
          <%= f.text_field :name, placeholder: "Digite o nome do cliente", maxlength: 40, class: "form-control #{flash[:class]}" %>
          <% if flash[:error].present? %>
            <div class="alert alert-danger">
              <%= flash[:error] %>
            </div>
          <% end %>
        </div>
        <div class="mt-2" align="right">
          <%= link_to "Cancelar", invoice_types_path, class: "btn btn-secondary" %>
          <%= f.submit "Salvar", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>